<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
    android:layout_weight="2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#616161"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team A"

        android:gravity="center"
       />
    <TextView
        android:textColor="#000000"
        android:textSize="56sp"
        android:fontFamily="sans-serif-light"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center"
        android:id="@+id/team_a_score"
       />
<Button
    android:layout_marginTop="24dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="+3 POINTS"
    android:onClick="addThreePoint"/>
    <Button
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+2 POINTS"
        android:onClick="addTwoPoint"/>
    <Button
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FREE THROWS"
        android:onClick="addFreePoint"/>
</LinearLayout>

<View
    android:layout_width="1dp"
    android:layout_height="500dp"
    android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#616161"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:gravity="center"
            />
        <TextView
            android:textColor="#000000"
            android:textSize="56sp"
            android:fontFamily="sans-serif-light"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"

            android:gravity="center"
            android:id="@+id/team_b_score"
            />
        <Button
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3 POINTS"
            android:onClick="addThreePointForTeamB"/>
        <Button
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2 POINTS"
            android:onClick="addTwoPointForTeamB"/>
        <Button
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FREE THROWS"
            android:onClick="addFreePointForTeamB"/>
    </LinearLayout>

</LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:text="reset"
            android:onClick="BtnReset"
            />

</RelativeLayout>
